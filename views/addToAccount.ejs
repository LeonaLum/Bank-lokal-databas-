<!DOCTYPE html>
<html lang="en">

  <%- include("./partials/head.ejs") %>
<body>
  <%- include("./partials/nav.ejs") %>
  
  <main>
    <form class="reg-form" id="updateForm" data-acid="<%= account._id %>">
      <h2>Sätt in pengar:</h2>

      <div class="form-field">
        <label for="email">Insättning:</label>
        <input  type="number" id="add" name="add" required>
      </div>
      <button id="addButton">Bekräfta</button>
    </form>
  
  </main>
<%- include("./partials/footer.ejs") %>

<script>
  let addButton = document.getElementById("addButton");
  let addForm = document.getElementById('addForm');

  let fieldAdd = document.getElementById('add');
  

  addButton.addEventListener("click", (e) => {
    e.preventDefault();
   fetch(`http://localhost:3000/deposit/${updateForm.dataset.acid}`, {
       method: 'PATCH',
       headers: {
       "Content-Type": "application/json",
       },
       body: JSON.stringify({ 
         "balance": fieldAdd.value
       }),
     })
      .then((response) => console.log(response))
      .catch(err => console.log(err));
  })
  
</script>



</body>
</html>
